<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ashirviskas.smsemergencer.MainActivity">


    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:layout_x="144dp"
        android:layout_y="318dp"
        android:text="Test"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="345dp" />

    <Switch
        android:id="@+id/switch_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnSendSMS"
        android:layout_marginTop="12dp"
        android:text="Kur tu??" />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSendSMS"
        android:layout_alignStart="@+id/btnSendSMS"
        android:text="Apply" />

    <TextView
        android:id="@+id/showSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_apply"
        android:layout_alignStart="@+id/button_apply"
        android:layout_marginBottom="159dp"
        android:text="lesms" />


</RelativeLayout>
