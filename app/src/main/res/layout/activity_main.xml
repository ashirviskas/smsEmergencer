<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_crear_entrenamiento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context="ashirviskas.smsemergencer.MainActivity"
        android:weightSum="1">




    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test sms number below"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/etxt_sms_number"
        android:layout_width="362dp"
        android:layout_height="28dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="text"
        android:text="+3706"
        android:textSize="18sp"
        android:visibility="visible" />


    <EditText
        android:id="@+id/etxt_sms_text"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_weight="0.03"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="text"
        android:text="Sms Text" />


    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pref_above_permissions_button_text"
        android:textSize="16sp" />

        <Button
            android:id="@+id/btnGrantSMSpermissions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant SMS permissions" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnSettings0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_linear"
        android:layout_alignRight="@+id/layout_linear"
        android:layout_margin="16dp"
        android:clickable="true"
        android:onClick="btnSettings_onClick"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_preferences" />
</RelativeLayout>