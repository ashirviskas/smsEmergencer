<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="ashirviskas.smsemergencer.MainActivity"
    android:weightSum="1">


    <Switch
        android:id="@+id/switch_send_sms_location"
        android:layout_width="363dp"
        android:layout_height="32dp"
        android:layout_marginTop="0dp"
        android:checked="true"
        android:text="Send sms with location"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="true"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="362dp"
        android:layout_height="28dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="text|textPersonName"
        android:singleLine="true"
        android:text="Where are you??"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger word"
        android:textSize="16sp"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />
    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/darker_gray"/>

    <Switch
        android:id="@+id/DoABeepSwitch"
        android:layout_width="360dp"
        android:layout_height="32dp"
        android:layout_marginTop="0dp"
        android:checked="true"
        android:text="Beep Boop"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/DoABeepText"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_weight="0.03"
        android:background="@android:color/transparent"
        android:ems="10"
        android:inputType="text"
        android:text="Pyp" />


    <TextView
        android:id="@+id/showSMSView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trigger word"
        android:textSize="16sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/view4" />

    <Button
        android:id="@+id/btnSendSMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:text="Test" />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply" />


</LinearLayout>
